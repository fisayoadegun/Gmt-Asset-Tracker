@model Gmt_Asset_Tracker.Models.Asset

@{
    ViewData["Title"] = "Details";
}

<!------ Include the above in your HEAD tag ---------->

<!DOCTYPE html>
<html lang="en" style="font-family: sans-serif; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Asset Detail</title>

    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    <link href="~/css/detail.css" rel="stylesheet" />
</head>

<body>

    <div class="container">
        <div class="card">
            <div class="container-fliud">
                <div class="wrapper row">
                    <div class="preview col-md-6">

                        <div class="preview-pic tab-content">
                            <div class="tab-pane active" id="pic-1"><img src="~/media/images/@Model.Image" /></div>
                        </div>
                        <ul class="preview-thumbnail nav nav-tabs">
                            <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="~/media/images/@Model.Image" /></a></li>
                        </ul>
                    </div>
                    <div class="details col-md-6" style="font-size:10px; ">
                        <h3 class="product-title"  style="font-size: 1.5em; font-family: sans-serif">@Html.DisplayFor(model => model.Asset_name)</h3>
                        <p class="product-description" style="font-size:1.5em; font-family:sans-serif">@Html.DisplayFor(model => model.Asset_description)</p>
                        <h4 class="price"><span></span></h4>
                        <p class="vote"><strong></strong><strong></strong></p>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Asset_tag):
                            <span>@Html.DisplayFor(model => model.Asset_tag)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Service_tag):
                            <span>@Html.DisplayFor(model => model.Service_tag)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Assigned_to):
                            <span>@Html.DisplayFor(model => model.Assigned_to)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Purchased_price):
                            <span> &#x20A6;@Html.DisplayFor(model => model.Purchased_price)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Delivery_date):
                            <span>@Html.DisplayFor(model => model.Delivery_date)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Requistion_pack):
                            <span>
                                <a href="~/Asset/PDFViewerNewTab?fileName=@Model.Requistion_pack" target="_blank">
                                    @Model.Requistion_pack
                                </a>
                            </span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Present_user):
                            <span>@Html.DisplayFor(model => model.Present_user)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Category):
                            <span>@Html.DisplayFor(model => model.Category.Category_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Location):
                            <span>@Html.DisplayFor(model => model.Location.Location_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Present_location):
                            <span>@Html.DisplayFor(model => model.Present_location.Location_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Department):
                            <span>@Html.DisplayFor(model => model.Department.Department_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size: 1.5em; font-family: sans-serif">
                            @Html.DisplayNameFor(model => model.Asset_State):
                            <span>@Html.DisplayFor(model => model.Asset_State.Asset_state)</span>
                        </h5>
                        <h5 class="sizes" style="font-size:1.5em; font-family:sans-serif">
                            @Html.DisplayNameFor(model => model.Vendor):
                            <span>@Html.DisplayFor(model => model.Vendor.Vendor_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size:1.5em; font-family:sans-serif">
                            @Html.DisplayNameFor(model => model.Physical_check):
                            <span>@Html.DisplayFor(model => model.Physical_check.Check_name)</span>
                        </h5>
                        <h5 class="sizes" style="font-size:1.5em; font-family:sans-serif">
                            @Html.DisplayNameFor(model => model.Check_date):
                            <span>@Html.DisplayFor(model => model.Check_date)</span>
                        </h5>
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
